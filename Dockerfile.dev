FROM node:20-alpine

WORKDIR /app

RUN apk add --no-cache libc6-compat openssl python3 make g++

COPY package.json package-lock.json* ./
RUN npm install

CMD ["sh", "-c", "echo \"NEXT_BUILD=$NEXT_BUILD\" && npx prisma generate && npx prisma db push && if [ \"$NEXT_BUILD\" = \"1\" ]; then echo \"Running next build (NEXT_BUILD=1)\"; if ! npm run build; then echo \"next build failed (continuing to dev)\"; fi; else echo \"Skipping next build (NEXT_BUILD!=1)\"; fi && npm run dev -- --hostname 0.0.0.0 --port 3000"]
